<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel">Input Data</h4>
            </div>
            <div class="modal-body">
                <div class="form-horizontal">
                    <div class="form-group row">
                        <input type="hidden" id="cabangId" />
                        <label class="col-sm-3 control-label">Nama Cabang</label>
                        <div class="col-sm-6">
                            <input type="text" class="form-control" id="nama" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-3 control-label">kode Cabang</label>
                        <div class="col-sm-6">
                            <input type="text" class="form-control" id="kode" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-3 control-label">Sandi Outlet</label>
                        <div class="col-sm-6">
                            <input type="text" class="form-control" id="sandi" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="Save" onclick="Validation();">Simpan</button>
                <button type="button" class="btn btn-primary" id="Update" onclick="Validation();">Perbarui</button>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container">
        <div class="card" style="background-color:white">
            <div class="card-header card-header-info" style="background-color:#319DA0">
                <h3 class="card-title">Master Cabang</h3>
                <p class="card-text">tambah / perbarui / hapus data</p>
                <a class="btn btn-danger float-right" data-toggle="modal" data-target="#myModal" onclick="ClearScreen()" data-backdrop="static" data-keyboard="false" ;><i class="fa fa-plus"></i></a>
            </div>
            <div class="card-body ">
                <table id="table" class="table table-bordered">
                    <thead>
                        <tr>
                            <th>No</th>
                            <th>Nama Cabang</th>
                            <th>Sandi</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>

<script>
    $(document).ready(function() {
        read();
    })

    function read() {
        var t = $("#table").DataTable({
            "ajax": {
                "url": "@Url.Action("Get","Cabang")",
                "type": "Get",
                "datatype": "json"
            },
            "columns": [
                { "data": null },
                { "data": "nama" },
                { "data": "sandi" },
                {
                    "render": function(data, type, row) {
                        return "<button class='btn btn-warning btn-sm text-white' onclick = GetById('" + row.id + "');><i class='fas fa-edit'></i></button> " +
                            "<button class='btn btn-danger btn-sm text-white' onclick = Delete('" + row.id + "');><i class='fa fa-trash'></i></button>";
                    },
                },
            ]
        })
        t.on('order.dt search.dt', function() {
            t.column(0, { search: 'applied', order: 'applied' }).nodes().each(function(cell, i) {
                cell.innerHTML = i + 1;
            });
        }).draw();
    }
    function GetById(Id) {
        $.ajax({
            "url": "@Url.Action("GetById","Cabang")",
            "type": "GET",
            "datatype": "json",
            "data": { Id: Id }
        }).then((result) => {
            if (result != null) {
                console.log(result);
                $("#cabangId").val(result.data.id);
                $("#nama").val(result.data.nama);
                $("#kode").val(result.data.kodeCabang);
                $("#sandi").val(result.data.sandi);
                $("#myModal").modal('show');
                $("#Update").show();
                $("#Save").hide();
            }
        })
    }

    function Save() {
        var data = new Object();
        data.nama = $("#nama").val();
        data.kodeCabang = $("#kode").val();
        data.sandi = $("#sandi").val();
        $.ajax({
            "url": "@Url.Action("Save","Cabang")",
            "type": "POST",
            "datatype": "json",
            "data": data
        }).then((result) => {
            if (result != false) {
                Swal.fire(
                    'Success!',
                    'Data Berhasil Diinput!.',
                    'success'
                ).then(() => {
                    $("#myModal").modal('hide');
                    $('#table').DataTable().ajax.reload();
                })
            }
            else {
                Swal.fire(
                    'Failed!',
                    'Data Tidak Berhasil Diinput!.',
                    'Failed'
                ).then(() => {
                    $("#myModal").modal('hide');
                    $('#table').DataTable().ajax.reload();
                })
            }
        })
    }
    function Edit() {
        var data = new Object();
        data.id = $("#cabangId").val();
        data.nama = $("#nama").val();
        data.kodeCabang = $("#kode").val();
        data.sandi = $("#sandi").val();
        $.ajax({
            "url": "@Url.Action("Save","Cabang")",
            "type": "POST",
            "datatype": "json",
            "data": data
        }).then((result) => {
            if (result != false) {
                Swal.fire(
                    'Success!',
                    'Data Berhasil Diinput!.',
                    'success'
                ).then(() => {
                    $("#myModal").modal('hide');
                    $('#table').DataTable().ajax.reload();
                })
            }
            else {
                Swal.fire(
                    'Failed!',
                    'Data Tidak Berhasil Diinput!.',
                    'Failed'
                ).then(() => {
                    $("#myModal").modal('hide');
                    $('#table').DataTable().ajax.reload();
                })
            }
        })
    }
    function Delete(Id) {
        Swal.fire({
            title: 'Apakah Anda Yakin?',
            text: "Data Terhapus Tidak Bisa Dikembalikan!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes'
        }).then((result) => {
            if (result.value) {
                $.ajax({
                    "url": "@Url.Action("Delete","Cabang")",
                    "datatype": "json",
                    "data": { Id: Id }
                }).then((result) => {
                    debugger;
                    if (result.data != 0) {
                        Swal.fire(
                            'Success!',
                            'Data Terhapus.',
                            'success'
                        ).then(() => {
                            $('#table').DataTable().ajax.reload();
                        })
                    }
                    else {
                        Swal.fire(
                            'Failed!',
                            'Data Tidak Terhapus.',
                            'failed'
                        ).then(() => {
                            $('#table').DataTable().ajax.reload();
                        })
                    }
                    $("#myModal").modal('hide');
                    $('#table_role').DataTable().ajax.reload();
                })
            }
        })
    }


    function ClearScreen() {
        $("#cabangId").val('');
        $("#nama").val('');
        $("#kode").val('');
        $("#sandi").val('');
        $("#Update").hide();
        $("#Save").show();
    }
    function Validation() {
        if ($("#nama").val() == "" || $("#nama").val() == " ") {
            Swal.fire('mohon isi field nama cabang');
        }
        else if ($("#cabangId").val() == "" || $("#cabangId").val() == " ") {
            Save();
        }
        else {
            Edit($("#cabangId").val());
        }
    }

</script>
